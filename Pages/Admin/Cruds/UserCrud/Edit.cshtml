@page
@model CisternasGAMC.Pages.Admin.Cruds.UserCrud.EditModel

@{
    ViewData["Title"] = "Editar Usuario";

    Layout = "_LayoutAdmin";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Editar Usuario</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Detalles del Usuario</h3>
                    </div>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="User.UserId" />

                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="User.FirstName">Nombre</label>
                                <input asp-for="User.FirstName" class="form-control" />
                                <span asp-validation-for="User.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.LastName">Apellido</label>
                                <input asp-for="User.LastName" class="form-control" />
                                <span asp-validation-for="User.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="display: none">
                                <label asp-for="User.Password">Contraseña</label>
                                <input asp-for="User.Password" class="form-control" />
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Email">Correo Electrónico</label>
                                <input asp-for="User.Email" class="form-control"/>
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="User.PhoneNumber">Número de Teléfono</label>
                                <input asp-for="User.PhoneNumber" class="form-control" />
                                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Role" class="control-label">Rol</label>
                                <select asp-for="User.Role" class="form-control">
                                    <option value="">Seleccione un rol</option>
                                    <option value="admin">Administrador</option>
                                    <option value="driver">Conductor</option>
                                    <option value="president">Presidente</option>
                                </select>
                                <span asp-validation-for="User.Role" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="User.Status">Estado</label>
                                <select asp-for="User.Status" class="form-control">
                                    <option value="1">Activo</option>
                                    <option value="2">Inactivo</option>
                                    <option value="3">Despedido</option>
                                </select>
                                <span asp-validation-for="User.Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-page="./Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">Restablecer Contraseña</h3>
                    </div>
                    <div class="card-body text-center">
                        <form method="post" asp-page-handler="SendPasswordReset">
                            <input type="hidden" name="emailReset" value="@Model.User.Email" />
                            <button type="submit" class="btn btn-warning">Generar nueva contraseña</button>
                        </form>

                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)

                {
                    <div class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)

                {
                    <div class="alert alert-danger mt-3">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
