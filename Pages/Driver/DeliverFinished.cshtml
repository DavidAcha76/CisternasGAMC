@page "{waterDeliveryId:int?}"
@model CisternasGAMC.Pages.Driver.DeliverFinishedModel
@{
    Layout = "_LayoutDriver";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: rgba(77, 7, 140, 0.8); /* Fondo semi-transparente */
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: bold;
            color: white; /* Color del texto del título */
        }

    .btn-primary {
        width: 100%;
        font-size: 1.2rem;
        padding: 0.75rem;
        background-color: #EA547C; /* Nuevo color del botón */
        border-color: #EA547C; /* Color del borde del botón */
        color: white; /* Color del texto del botón */
    }

        .btn-primary:hover {
            background-color: #d0416a; /* Color al pasar el ratón por encima */
            border-color: #d0416a; /* Color del borde al pasar el ratón por encima */
        }
</style>

<div class="container">
    <div class="form-container">
        <h2>@Model.WaterDelivery?.Otb?.Name</h2>

        <form method="post" asp-page-handler="Deliver">
            <input type="hidden" name="waterDeliveryId" value="@Model.WaterDeliveryId" />
            <div class="mb-4">
                <label style="color:white" for="deliveredAmount" class="form-label">Monto Generado</label>
                <input type="text" class="form-control" id="deliveredAmount" name="deliveredAmount"
                       placeholder="Ingrese el monto generado" required maxlength="5" />
                <div id="error-message" style="color: red; display: none;">
                    Por favor, ingrese un monto válido.
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle-fill"></i> Terminar Entrega
            </button>
        </form>
    </div>
</div>

<script>
    document.getElementById('deliveredAmount').addEventListener('input', function () {
        const regex = /^\d{0,6}(\.\d{0,1})?$/; // Hasta 6 dígitos enteros y 1 decimal opcional
        const errorMessage = document.getElementById('error-message');

        // Eliminar el primer carácter si es un punto
        if (this.value.startsWith('.')) {
            this.value = this.value.slice(1);
        }

        // Verificar si el valor cumple con el formato
        if (!regex.test(this.value)) {
            errorMessage.style.display = 'block';
            this.value = this.value.slice(0, -1); // Elimina el último carácter inválido
        } else {
            errorMessage.style.display = 'none';
        }
    });
</script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

