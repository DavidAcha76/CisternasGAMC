@page "{waterDeliveryId:int?}"
@model CisternasGAMC.Pages.President.ReportModel
@{
    Layout = "_LayoutDriver";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .form-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: rgba(77, 7, 140, 0.8); /* Fondo semi-transparente */
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: bold;
            color: white; /* Color del texto del título */
        }

    .btn-success {
        width: 100%;
        font-size: 1.2rem;
        padding: 0.75rem;
        background-color: #28a745; /* Verde Bootstrap */
        border-color: #28a745; /* Color del borde */
        color: white; /* Color del texto */
        margin-bottom: 1rem;
    }

        .btn-success:hover {
            background-color: #218838; /* Verde más oscuro al pasar el ratón */
            border-color: #1e7e34; /* Color del borde al pasar el ratón */
        }

    .btn-danger {
        width: 100%;
        font-size: 1.2rem;
        padding: 0.75rem;
        background-color: #dc3545; /* Color rojo para el botón de reporte */
        border-color: #dc3545; /* Color del borde del botón de reporte */
        color: white; /* Color del texto del botón */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Color al pasar el ratón por encima */
            border-color: #bd2130; /* Color del borde al pasar el ratón por encima */
        }
</style>

<div class="container">
    <div class="form-container">
        <h2>@Model.WaterDelivery?.Otb?.Name</h2>

        <!-- Formulario para confirmar la entrega conforme -->
        <form method="post" asp-page-handler="SetArrival">
            <input type="hidden" name="waterDeliveryId" value="@Model.WaterDeliveryId" />
            <button type="submit" class="btn btn-success">
                <i class="bi bi-geo-alt-fill"></i> Entrega Conforme
            </button>
        </form>

        <!-- Formulario para reportar que la entrega no fue conforme -->
        <form method="post" asp-page-handler="ReportIssue">
            <input type="hidden" name="waterDeliveryId" value="@Model.WaterDeliveryId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Reportar Entrega No Conforme
            </button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
