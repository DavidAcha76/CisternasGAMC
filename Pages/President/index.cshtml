@page
@model CisternasGAMC.Pages.President.IndexModel
@{
    Layout = "_LayoutDriver";
}
<link rel="stylesheet" href="~/css/Driver.css">

<div class="form-container">
    <h2>Selecciona la Entrega</h2>
    <!-- Formulario que redirige a la página de entrega (Deliver) con el waterDeliveryId -->
    <form method="get" asp-page="/President/Report">
        <select id="otb" name="waterDeliveryId" class="form-control mb-3">
            @foreach (var waterDelivery in Model.WaterDeliveries)
            {

                var otb = waterDelivery.Otb;

                if (otb != null)

                {
                    <!-- Mostrar ID y Fecha de entrega para verificar datos -->
                    <option value="@waterDelivery.WaterDeliveryId">
                        Entrega ID: @waterDelivery.WaterDeliveryId - Fecha: @waterDelivery.DeliveryDate.ToString("dd/MM/yyyy")
                    </option>
                }
            }
        </select>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Seleccionar Entrega</button>
        </div>
    </form>

    <!-- Mostrar mensaje si no hay entregas disponibles -->
    @if (!Model.WaterDeliveries.Any())

    {
        <p class="text-danger text-center mt-3">No hay entregas disponibles con el estado requerido.</p>
    }
</div>
